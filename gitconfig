[include]
  path = ~/.gitauthorize

[core]
  editor = vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[difftool]
  tool = meld
  prompt = false

[mergetool]
  tool = meld
  prompt = false
  trustExitCode = false

[alias]
  a = add
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dft = difftool
  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  lg = log --stat
  purr = pull --rebase
  amend = commit --amend
  panic = !DIR=`basename $PWD` && tar cvf ../git-panic-$DIR-`date +"%Y-%m-%d_%H.%M.%S"`.tar *
  fetch = fetch -v
  fetchall = fetch -v --all
  unstage = reset HEAD
  discard = checkout -- 

[push]
  default = simple
