[core]
  editor = vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[difftool]
  tool = meld
  prompt = false

[mergetool]
  tool = meld
  prompt = false
  trustExitCode = false

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --stat
  purr = pull --rebase
  amend = commit --amend
  panic = !DIR=`basename $PWD` && tar cvf ../git-panic-$DIR-`date +"%Y-%m-%d_%H.%M.%S"`.tar *
  fetch = fetch -v
  fetchall = fetch -v --all

[push]
  default = simple
